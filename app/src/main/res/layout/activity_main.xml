<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alz.dailyvideonews.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/activity_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.alz.dailyvideonews.MainActivity">

        <Button
            android:text="Business"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:id="@+id/btnBusiness"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp" />

        <Button
            android:text="By Rating"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:id="@+id/btnRating"
            android:layout_below="@+id/btnRecency"
            android:layout_alignLeft="@+id/btnRecency"
            android:layout_alignStart="@+id/btnRecency"
            android:layout_alignRight="@+id/btnRecency"
            android:layout_alignEnd="@+id/btnRecency" />

        <Button
            android:text="Tech"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:id="@+id/btnTech"
            android:layout_below="@+id/btnPoltics"
            android:layout_alignLeft="@+id/btnPoltics"
            android:layout_alignStart="@+id/btnPoltics" />

        <Button
            android:text="By Views"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:id="@+id/btnViews"
            android:layout_below="@+id/btnRating"
            android:layout_alignLeft="@+id/btnRating"
            android:layout_alignStart="@+id/btnRating"
            android:layout_alignRight="@+id/btnRating"
            android:layout_alignEnd="@+id/btnRating" />

        <ListView
            android:id="@+id/video_results"
            android:dividerHeight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btnTech"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View style="@style/Line"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnTech" />

        <Button
            android:text="By Recency"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/btnRecency"
            android:layout_alignBaseline="@+id/btnBusiness"
            android:layout_alignBottom="@+id/btnBusiness"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp" />

        <Button
            android:text="Politics"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:id="@+id/btnPoltics"
            android:layout_below="@+id/btnBusiness"
            android:layout_alignRight="@+id/btnBusiness"
            android:layout_alignEnd="@+id/btnBusiness" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
