<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.alz.dailyvideonews.MainActivity">


    <Button
        android:text="By Recency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnBusiness"
        android:layout_toRightOf="@+id/btnBusiness"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:id="@+id/btnRecency" />

    <Button
        android:text="By Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPoltics"
        android:layout_alignLeft="@+id/btnRecency"
        android:layout_alignStart="@+id/btnRecency"
        android:id="@+id/btnRating"
        android:layout_alignRight="@+id/btnRecency"
        android:layout_alignEnd="@+id/btnRecency" />

    <Button
        android:text="Politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPoltics"
        android:layout_below="@+id/btnBusiness"
        android:layout_alignLeft="@+id/btnBusiness"
        android:layout_alignStart="@+id/btnBusiness" />

    <Button
        android:text="Tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTech"
        android:layout_below="@+id/btnPoltics"
        android:layout_alignLeft="@+id/btnPoltics"
        android:layout_alignStart="@+id/btnPoltics" />

    <Button
        android:text="By Views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViews"
        android:layout_below="@+id/btnRating"
        android:layout_alignLeft="@+id/btnRating"
        android:layout_alignStart="@+id/btnRating"
        android:layout_alignRight="@+id/btnRating"
        android:layout_alignEnd="@+id/btnRating" />

    <Button
        android:text="Business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:id="@+id/btnBusiness"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/video_results"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnTech"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View style="@style/Line"
        android:layout_alignTop="@+id/video_results"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
